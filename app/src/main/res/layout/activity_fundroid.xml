<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fundroid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f3f6"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.tpccina.tcpplesson03.FundroidActivity">

    <TextView
        android:id="@+id/fundroid_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="@string/have_fun_with_android"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/fundroid_logo"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/cupcake" />

    <TextView
        android:id="@+id/fundroid_feature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.47"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:text="@string/cupcake"
        android:textSize="24sp" />

    <!--<ImageButton
        android:id="@+id/fundroid_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@android:drawable/sym_def_app_icon" />-->
</LinearLayout>
